// №2 В заданной строке заменить каждую русскую букву символом «*»
#include <iostream>
using namespace std;
int main()
{
	setlocale(0, "RUS");
	unsigned char str[] = "Текст на русском i anglijskom да";
	int i = 0;
	cout << str << endl;
	while (str[i] != '\0') 
	{
		if (str[i] > 192 && str[i] < 255)
		{
			str[i] = '*';
		}
		cout << str[i];
		i++;
	}
}
