//#15Составить программу для нахождения числа, которое образуется из данного натурального числа при записи его цифр в обратном порядке. 
//Например, для числа 1234 получаем результат 4321
#include <iostream>

using namespace std;
void func(int a);
int main() {
    setlocale(0, "RUS");
    cout << "Введите число: ";
    int x;
    cin >> x;
    func(x);
}
void func(int a) {
    if (a == 0) //когда уже число, к примеру 2 делят на 10 (2/10, смотрите запись
                        // на три строки ниже) получается 0. На этом шаге нужно закруглится
        return;
    cout << a % 10; //Выводим остаток от деления на 10
    func(a / 10); //Вызываем функцию для этого числа без последней цифры
}
